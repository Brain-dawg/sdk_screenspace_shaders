{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current Shader",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoLogo",
                "-ExecutionPolicy",
                "Bypass",
                "-Command", 
                "bin\\process_shaders_single.ps1",
                "-Version",
                "20b",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/shadersrc"
            }
        }
    ]
}